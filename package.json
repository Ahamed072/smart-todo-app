{
  "name": "smart-ai-todo-app",
  "version": "1.0.0",
  "description": "AI-powered To-Do List application with voice input and bulk text processing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "setup": "npm run install:all && npm run init:db",
    "init:db": "node scripts/initDatabase.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "@google/generative-ai": "^0.1.3",
    "node-cron": "^3.0.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "ai",
    "todo",
    "voice",
    "task-management",
    "react",
    "node"
  ],
  "author": "Smart Todo Team",
  "license": "MIT"
}
